{
  "name": "pieces-decidim",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/pieces/community/decidim/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": [
        "dist/{projectRoot}"
      ],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/pieces/community/decidim",
        "tsConfig": "packages/pieces/community/decidim/tsconfig.lib.json",
        "packageJson": "packages/pieces/community/decidim/package.json",
        "main": "packages/pieces/community/decidim/src/index.ts",
        "assets": [
          "packages/pieces/community/decidim/*.md",
          {
            "input": "packages/pieces/community/decidim/src/i18n",
            "output": "./src/i18n",
            "glob": "**/!(i18n.json)"
          },
          {
            "input": "packages/pieces/community/decidim/src",
            "output": "./src",
            "glob": "logo.svg"
          }
        ],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "updateBuildableProjectDepsInPackageJson": true
      },
      "dependsOn": [
        "prebuild",
        "^build"
      ]
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "prebuild": {
      "dependsOn": [
        "^build"
      ],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/pieces/community/decidim",
        "command": "bun install --no-save --silent"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/pieces/community/decidim/jest.config.ts"
      }
    }
  }
}
